<% layout("/layouts/boilerplate") -%>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>ADD DETAILS HERE OF YOUR PROPERTY</h3>
      <br>
      <br>
      <form method="POST" action="/listings" novalidate class="needs-validation">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required />
          <div class="invalid-feedback">Title should be valid </div>
          <div class="valid-feedback">title looks good! </div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[description]" placeholder="enter description" required class="form-control"></textarea>
          <div class="invalid-feedback">Description should be valid </div>
          <div class="valid-feedback">Description looks good! </div>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Image Link</label>
          <input name="listing[image]" placeholder="enter image URL/Link" required type="text" class="form-control" />
          <div class="invalid-feedback">Image link should be need! </div>
          <div class="valid-feedback">Description looks good! </div>

        </div>

        <div class="row">



          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder=" in square feet" type="number" class="form-control" required />
            <div class="invalid-feedback">Price should be valid </div>

            <div class="valid-feedback">Price looks good! </div>
          </div>



          <div class="mb-3 col-md-7">
            <label for="country" class="form-label">Your Contract Information </label>
            <input name="listing[country]" placeholder="mobile number, gmail" type="text" class="form-control" required />
            <div class="invalid-feedback">Country should be valid </div>
            <div class="valid-feedback"> looks good! </div>
          </div>

        </div>





        <div class="mb-3 location-button">
          <label for="location" class="form-label">Enter Location</label>
          <input name="listing[location]" placeholder="Meerut,Uttar Pardesh" type="text" class="form-control"
            required />
          <div class="invalid-feedback">Location should be valid </div>
          <div class="valid-feedback"> looks good! </div>

        </div>
        <br>
        <br>

        <button class="btn btn-dark add-btn mt-3" >Add</button>
      </form>
    </div>

  </div>

  </div>
  <br>