<% layout("/layouts/boilerplate") -%>
<body>
    
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 buymargin">
        <% for(let listing of allListings) { %>
  
          <a href="/listings/<%= listing._id %>/edit" class="listing-link buyborder">
            <div class="card col" style="width: 20rem;">
              <img src="<%= listing.image %>" class="card-img-top" alt="listing_image" style="height : 20rem" />
  
              <div class="card-img-overlay">
  
              </div>
  
              <div class="card-body">
                <p class="card-text">
                  <b>
                    <%= listing.title %>
                  </b>
                  <br>
  
                  &#8377; <%= listing.price.toLocaleString("en-IN") %> square feet
                </p>
              </div>
            </div>
            <form action="/listings/<%= listing._id %>/edit">
              <button class="buybtn22" >EDIT</button>
            </form>
  
            <% } %>
      </div>
      </a>
  
</body>