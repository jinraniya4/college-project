<% layout("/layouts/boilerplate") -%>

  <div class="row mt-3 ">
    <div class="col-8 offset-2">
      <h3>Listing Details</h3>
      <br>
    </div>



    <div class="card col-6 offset-2">

      <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
      <div class="card-body">
        <p class="card-text">
          <b>
            <%= listing.title %>
          </b>
          <br>
          <%= listing.description %>
            <br>
           Price - &#8377; <%= listing.price.toLocaleString("en-IN") %>
              <br>
             Location - <%= listing.location %>
                <br>
              Contact -  <%= listing.country %>

        </p>
      </div>

    </div>
    <br>
    <div class="btns">

      <!-- <a href="/listings/show" class="btn btn-dark col-1 offset-2  edit-btn"> BOOk PROPERTY </a> -->

      <a class=" btn btn-dark col-1 offset-2  edit-btn" href="/listings">
        Back To Home</a>
    </div>
    <form action="/listings/<%= listing._id %>/contact">
      <button class="btn btn-dark col-1 offset-7 btn11111" > Contact </button>
    </form>


  </div>
  <br>
  <br>

